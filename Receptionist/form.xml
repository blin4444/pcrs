<?xml version="1.0"?>
<form>
    <div id="User_Info">
        <input id="first_name" name="First Name" type="text"/>
        <input id="middle_name" name="Middle Name" type="text" required="true"/>
        <input id="last_name" name="Last Name" type="text"/>
        <br/>
        <input id="sin" name="SIN Number" type="number"/>
        <input id="date_of_birth" name="Date of Birth" type="date"/>
        <input id="gender" name="Gender" type="gender" />
        <br/>
        <input id="street_address" name="Street Address" type="text"/>
        <input id="city" name="City" type="text"/>
        <br/>
        <input id="province" name="Province" type="text"/>
        <input id="postal_code" name="Postal Code" type="text"/>
        <br/>
        <input id="phone" name="Phone Number" type="text" />
        <input id="alternate_phone" name="Alternate Phone Number" type="text" placeholder="test" />
        <input id="email" name="Email" type="text"/>
    </div>

    <div id="2">
        <input id="employment_situation" name="Please choose one of the following" type="list" />
        <input id="unemployment_duration" name="I have been unemployed for" type="list" required="true"/>
        <br/>
        <input id="government_assistance" name="Government Assistance" type="list" required="true"/>
        <input id="residency_status" name="Residency Status" type="list"/>
    </div>

    <div id="3">
        <input id="office_use" name="Office Use" type="list"/>
    </div>
</form>
